@page "/cookies"
@inject IJSRuntime JsRuntime
@inject ISnackbar Snackbar

<h3>CookiesManager</h3>
<h2>Current country cookie value: @_country</h2>

<MudButton Color="Color.Primary" Variant="Variant.Filled" @onclick="@ShowAlert">Alert!</MudButton>
<MudButton Color="Color.Success" Variant="Variant.Filled" @onclick=@(() => GetCookie("country"))>GetCookie</MudButton>
<MudButton Color="Color.Tertiary" Variant="Variant.Filled" @onclick=@(() => SetCookie("country", _newCookieValue, 4))>SetCookie</MudButton>
<MudTextField @bind-Value="_newCookieValue" Label="New cookie value" Variant="Variant.Text"/>
