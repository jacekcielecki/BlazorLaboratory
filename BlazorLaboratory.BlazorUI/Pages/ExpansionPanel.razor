        new UserAccessDto{ Country = "PL", Division = "ELSD", Email = "testuser2@mail.com", Level = "L3", Role = "Admin"},
        new UserAccessDto{ Country = "PL", Division = "ELSD", Email = "testuser2@mail.com", Level = "L4", Role = "Admin"},
    };


}
